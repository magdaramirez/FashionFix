<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:contentDescription="@string/descripcionFondo"/>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="90dp"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/logo"
        android:contentDescription="@string/descripcionLogo"/>

    <ImageView
        android:id="@+id/ivMarca"
        android:layout_width="222dp"
        android:layout_height="150dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        app:srcCompat="@drawable/marca"
        android:contentDescription="@string/descripcionMarca"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:text="@string/eslogan"
        android:layout_gravity="end|top"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="218dp"
        android:layout_height="64dp"
        android:text="@string/btn_iniciar"
        android:textSize="24sp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="150dp"
        android:background="@drawable/round_button"/>

    <Button
        android:id="@+id/btnCrearCuenta"
        android:layout_width="218dp"
        android:layout_height="64dp"
        android:text="@string/btn_crearCuenta"
        android:textSize="24sp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="70dp"
        android:background="@drawable/round_button"/>

</FrameLayout>