<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Recomendaciones">


    <!-- Contenedor para el resto del contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- RelativeLayout para el encabezado -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/purple">

            <ImageView
                android:id="@+id/ivMarca"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/marca"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/btnUsuario"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user"
                android:background="@android:color/transparent"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"/>

        </RelativeLayout>

        <!-- Encabezado de texto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/tvRecomendaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECOMENDACIONES"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

        <!-- Contenedor de las imágenes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Imagen del pantalón -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_weight="2"
                android:src="@drawable/bottom"
                android:scaleType="fitCenter"/>

            <!-- Contenedor de la camisa y los zapatos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="380dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <!-- Imagen de la camisa -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/top"
                    android:scaleType="fitCenter"/>

                <!-- Imagen de los zapatos -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/shoes"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




    <!-- LinearLayout Shuffle/Usar/Fav -->
    <LinearLayout
        android:id="@+id/llShuffleUsarFav"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@id/llMenu">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnShuffle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shuffle"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnUsar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usar Outfit"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnFav"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fav"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <!-- LinearLayout Menu -->
    <LinearLayout
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/purple"
        android:gravity="top"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnRecomendacion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/recomendacion"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtRecomendacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Recomendaciones"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnCloset"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/closet"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtCloset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Closet"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/darkPurple">

            <ImageButton
                android:id="@+id/btnAgregarPrenda"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/agregar"
                android:scaleType="fitCenter"
                android:gravity="center"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnHistorial"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/historial"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtHistorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historial"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnFavoritos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/favorito"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtFavoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favoritos"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>