                android:width="1dp"
            android:color="@color/black" /> <!-- Color del borde -->
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>
    <!-- TriÃ¡ngulo indicador de lista desplegable -->
